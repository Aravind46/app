    <script>
        var pass = "";
        
        $(document).ready(function () {
            $('#init_div').width(window.screen.availWidth);
            $('#init_div').height(window.screen.availHeight);
            $('[id*=img]').width(window.screen.availWidth);
            $('[id*=img]').height(window.screen.availHeight);
        })

        function press(val) {
            $('.cols').removeClass('act')
            $(val).addClass('act');
            if (pass.length == 3) {
                pass += val.innerHTML;
                $($('.checker').children()[pass.length-1]).addClass('typed')
                if (pass == '1234') {
                    
                    pass = "";
                    $($('.checker').children()).removeClass('typed')
                    $('#init_div').hide()
                    
                    $('.pad,.checker,.row1,.row2,.row3,.row4').hide()
                    $('#msg').show();
                    $('#circle').addClass('circleit')
                }
                else {
                    pass = "";
                    $('.checker').effect("bounce", "slow");
                    $($('.checker').children()).removeClass('typed')
                }
            }
            else {
                
                pass += val.innerHTML;
                $($('.checker').children()[pass.length-1]).addClass('typed')
            }
        }
        function circleClick() {
            $('#top').addClass('topper');
            $('#bottom').addClass('bottomup')
            setTimeout(fadder, 1900);
        }
        function fadder() {
            $('#msg').hide();
            $('#roller').fadeIn();
        }
    </script>




